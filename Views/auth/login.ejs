<!-- Views/auth/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TransitHub - Login</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/auth.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js" integrity="sha512-GWzVrcGlo0TxTRvz9ttioyYJ+Wwk9Ck0G81D+eO63BaqHaJ3YZX9wuqjwgfcV/MrB2PhaVX9DkYVhbFpStnqpQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <style>
    /* Override body overflow for auth pages to enable scrolling */
    body {
      overflow: auto !important;
      height: auto !important;
    }
  </style>
</head>
<body>
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <h1><i class="fas fa-bus"></i> TransitHub</h1>
        <p class="tagline">Modern Transit Data Explorer</p>
      </div>
      
      <div class="auth-tabs">
        <a href="/auth/login" class="auth-tab active">Login</a>
        <a href="/auth/signup" class="auth-tab">Sign Up</a>
      </div>
      
      <% if (error) { %>
        <div class="auth-error">
          <%= error %>
        </div>
      <% } %>
      
      <form class="auth-form" action="/auth/login" method="POST">
        <div class="form-group">
          <label for="username"><i class="fas fa-user"></i> Username or Email</label>
          <input type="text" id="username" name="username" placeholder="Enter username or email" required>
        </div>
        
        <div class="form-group">
          <label for="password"><i class="fas fa-lock"></i> Password</label>
          <input type="password" id="password" name="password" required>
        </div>
        
        <div class="form-actions">
          <button type="submit" class="btn-primary">
            <i class="fas fa-sign-in-alt"></i> Login
          </button>
        </div>
      </form>
      
      <div class="auth-footer">
        <p>Don't have an account? <a href="/auth/signup">Sign Up</a></p>
        <p><a href="/">Continue as Guest</a> <small>(limited access)</small></p>
      </div>
    </div>
  </div>

  <script src="/js/auth.js"></script>
</body>
</html>