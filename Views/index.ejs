<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>US Geographic Explorer</title>
  <link rel="stylesheet" href="/css/styles.css">
  <script src="https://d3js.org/d3.v7.min.js"></script>
  <script src="https://d3js.org/topojson.v3.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <div class="cosmic-container">
    <!-- Particle Background -->
    <div id="particles-js"></div>

    <!-- Header -->
    <header class="cosmic-header">
      <div class="header-content">
        <h1 class="glow-text">US Geographic Explorer</h1>
        <div class="control-panel">
          <button id="homeButton" class="cosmic-btn">Home</button>
          <button id="toggleSidebar" class="cosmic-btn">Toggle Data</button>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="cosmic-main">
      <div class="map-section">
        <div id="mapTitle" class="map-title glow-text">United States</div>
        <div id="mapView" class="map-view"></div>
        <div id="legend" class="map-legend"></div>
      </div>

      <!-- Collapsible Sidebar -->
      <aside id="dataSidebar" class="cosmic-sidebar">
        <div id="dataPanelContent" class="sidebar-content"></div>
      </aside>
    </main>
  </div>

  <!-- Templates -->
  <template id="stateDataTemplate">
    <div class="state-data">
      <button id="backButton" class="back-btn">← Back</button>
      <h2 id="stateName" class="neon-text"></h2>
      <div class="metric-grid" id="stateMetricsGrid"></div>
      <div id="frequencyDistributionsContainer">
        <h3 class="neon-text">Frequency Distributions</h3>
        <div id="chartsContainer"></div>
      </div>
    </div>
  </template>

  <template id="countyDataTemplate">
    <div class="county-data">
      <button id="backToStateButton" class="back-btn">← Back to State</button>
      <h2 id="countyName" class="neon-text"></h2>
      <div class="metric-grid" id="countyMetricsGrid"></div>
      <div id="countyFrequencyContainer">
        <h3 class="neon-text">Frequency Distributions</h3>
        <div id="countyChartsContainer"></div>
      </div>
    </div>
  </template>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
  <script src="/js/app.js"></script>
  <script>
    particlesJS('particles-js', {
      particles: {
        number: { value: 80, density: { enable: true, value_area: 800 } },
        color: { value: '#ffffff' },
        shape: { type: 'circle' },
        opacity: { value: 0.5, random: true },
        size: { value: 3, random: true },
        line_linked: { enable: false },
        move: { enable: true, speed: 1, direction: 'none', random: true }
      },
      interactivity: { detect_on: 'canvas', events: { onhover: { enable: true, mode: 'repulse' } } },
      retina_detect: true
    });

    document.addEventListener('DOMContentLoaded', () => {
      document.getElementById('toggleSidebar').addEventListener('click', () => {
        document.getElementById('dataSidebar').classList.toggle('collapsed');
      });
    });
  </script>
</body>
</html>