<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>US Geographic Explorer</title>
  <link rel="stylesheet" href="/css/styles.css">
  <script src="https://d3js.org/d3.v7.min.js"></script>
  <script src="https://d3js.org/topojson.v3.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <div class="app-container">
    <!-- Header -->
    <header class="header">
      <div class="header-content">
        <h1 class="logo">US Geographic Explorer</h1>
        <nav class="header-nav">
          <button id="homeButton" class="btn btn-icon"><span class="icon-home"></span>Home</button>
          <button id="databaseInfoButton" class="btn btn-icon"><span class="icon-database"></span>Database</button>
        </nav>
      </div>
    </header>

    <!-- Main Layout -->
    <main class="main-layout">
      <!-- Sidebar for Data -->
      <aside class="sidebar" id="dataSidebar">
        <div class="sidebar-content" id="dataPanelContent"></div>
      </aside>

      <!-- Map Area -->
      <section class="map-section">
        <div class="map-header">
          <h2 id="mapTitle" class="map-title">United States</h2>
        </div>
        <div class="map-container" id="mapView"></div>
      </section>
    </main>

    <!-- Modals -->
    <div id="databaseInfoModal" class="modal">
      <div class="modal-content glass-effect">
        <div class="modal-header">
          <h2>Database Info</h2>
          <span class="close-button">&times;</span>
        </div>
        <div class="modal-body">
          <!-- Same content as before, styled with glassmorphism -->
        </div>
      </div>
    </div>

    <div id="countyDataModal" class="modal">
      <div class="modal-content glass-effect">
        <div class="modal-header">
          <h2>County Data</h2>
          <span class="close-button close-county-modal">&times;</span>
        </div>
        <div class="modal-body" id="countyDataModalContent"></div>
      </div>
    </div>
  </div>

  <script src="/js/app.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelector('.close-county-modal').addEventListener('click', () => {
        document.getElementById('countyDataModal').style.display = 'none';
      });
    });
  </script>
</body>
</html>