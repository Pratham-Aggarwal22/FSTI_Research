<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>US Geographic Explorer</title>
  <link rel="stylesheet" href="/css/styles.css">
  <!-- D3, TopoJSON, and Chart.js libraries -->
  <script src="https://d3js.org/d3.v7.min.js"></script>
  <script src="https://d3js.org/topojson.v3.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <div class="cosmic-container">
    <!-- Particle Background -->
    <div id="particles-js"></div>

    <!-- Header -->
    <header class="cosmic-header">
      <div class="header-content">
        <h1 class="glow-text">US Geographic Explorer</h1>
        <div class="control-panel">
          <button id="homeButton" class="cosmic-btn">Home</button>
          <button id="databaseInfoButton" class="cosmic-btn">Database</button>
          <button id="toggleSidebar" class="cosmic-btn">Toggle Data</button>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="cosmic-main">
      <div class="map-section">
        <div id="mapTitle" class="map-title glow-text">United States</div>
        <div id="mapView" class="map-view"></div>
      </div>

      <!-- Collapsible Sidebar -->
      <aside id="dataSidebar" class="cosmic-sidebar">
        <div id="dataPanelContent" class="sidebar-content"></div>
      </aside>
    </main>

    <!-- Database Info Modal -->
    <div id="databaseInfoModal" class="cosmic-modal">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="glow-text">Database Connection</h2>
          <span class="close-button">&times;</span>
        </div>
        <div class="modal-body">
          <div class="info-card">
            <h3 class="neon-text">MongoDB Connection</h3>
            <p>Connected to MongoDB Atlas cluster:</p>
            <div class="code-block">
              <pre><code>const dbConfig = {
  uri: "<%= process.env.MONGODB_URI.replace(/(.{10}).*(.{10})/, '$1********$2') %>",
  dbName: "StateWiseComputation"
};</code></pre>
            </div>
          </div>
          <div class="info-card">
            <h3 class="neon-text">Data Structure</h3>
            <p>State-specific databases contain:</p>
            <ul>
              <li><strong>Averages</strong>: County metrics</li>
              <li><strong>Frequency-*</strong>: Frequency distributions</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- County Data Modal -->
    <div id="countyDataModal" class="cosmic-modal">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="glow-text">County Data</h2>
          <span class="close-county-modal close-button">&times;</span>
        </div>
        <div class="modal-body" id="countyDataModalContent"></div>
      </div>
    </div>
  </div>

  <!-- Templates -->
  <template id="stateDataTemplate">
    <div class="state-data">
      <h2 id="stateName" class="neon-text"></h2>
      <div class="metric-grid">
        <div class="metric-card">
          <span class="metric-label">Population</span>
          <span id="statePopulation" class="metric-value"></span>
        </div>
        <div class="metric-card">
          <span class="metric-label">Capital</span>
          <span id="stateCapital" class="metric-value"></span>
        </div>
      </div>
      <div id="stateMetricsContainer">
        <h3 class="neon-text">State Metrics</h3>
        <div id="stateMetricsGrid" class="metric-grid"></div>
      </div>
      <div id="frequencyDistributionsContainer">
        <h3 class="neon-text">Frequency Distributions</h3>
        <div id="chartsContainer"></div>
      </div>
    </div>
  </template>

  <template id="countyDataTemplate">
    <div class="county-data">
      <h2 id="countyName" class="neon-text"></h2>
      <div class="metric-grid">
        <div class="metric-card">
          <span class="metric-label">Population</span>
          <span id="countyPopulation" class="metric-value"></span>
        </div>
        <div class="metric-card">
          <span class="metric-label">Area</span>
          <span id="countyArea" class="metric-value"></span>
        </div>
      </div>
    </div>
  </template>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
  <script src="/js/app.js"></script>
  <script>
    // Particle Background
    particlesJS('particles-js', {
      particles: {
        number: { value: 80, density: { enable: true, value_area: 800 } },
        color: { value: '#ffffff' },
        shape: { type: 'circle' },
        opacity: { value: 0.5, random: true },
        size: { value: 3, random: true },
        line_linked: { enable: false },
        move: { enable: true, speed: 1, direction: 'none', random: true }
      },
      interactivity: { detect_on: 'canvas', events: { onhover: { enable: true, mode: 'repulse' } } },
      retina_detect: true
    });

    // County Modal Close
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelector('.close-county-modal').addEventListener('click', () => {
        document.getElementById('countyDataModal').style.display = 'none';
      });
      document.getElementById('toggleSidebar').addEventListener('click', () => {
        document.getElementById('dataSidebar').classList.toggle('collapsed');
      });
    });
  </script>
</body>
</html>